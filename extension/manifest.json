{
    "manifest_version": 3,
    "name": "Focused Article Reader",
    "version": "0.1.0",
    "description": "Enhances article reading with TTS, highlighting, and AI summaries.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://*.medium.com/*",
          "https://*.wikipedia.org/*"
        ],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }